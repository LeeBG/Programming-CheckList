package test;

import java.util.HashMap;

import javax.swing.LayoutStyle;

import org.json.simple.JSONObject;
import net.nurigo.java_sdk.api.Message;
import net.nurigo.java_sdk.exceptions.CoolsmsException;

public class ExampleSend {
	private static boolean err;
	public boolean getErr() {
		return err;
	}
	public void setErr(boolean err) {
		this.err = err;
	}
	public static void SendM(String to, String text) {
		String api_key = "NCSQLLSDEIEDE6PW";
		String api_secret = "HMUEOCENBSZFANVWZSABQDCUY4IMCW9P";
		Message coolsms = new Message(api_key, api_secret);
		
		// 4 params(to, from, type, text) are mandatory. must be filled
		HashMap<String, String> params = new HashMap<String, String>();
		params.put("to", to);
		params.put("from", "01085391848");
		params.put("type", "SMS");
		params.put("text", text);
		params.put("app_version", "test app 1.2"); // application name and version

		try { // 통신하다보면 예상하지 못한 예외적인 상황이 생길 수 있음.
			JSONObject obj = (JSONObject) coolsms.send(params);
			System.out.println("메시지가 전송되었습니다.");
			// 1번 obj가(문자열) -> 자바 오브젝트
			// 2번 error가 있는지 확인
			// 3번 DB insert
			err = false;
			System.out.println(obj.toString());
//			String er[] = obj.toString().split(regex)
			String er[] = obj.toString().split(":");
			if(er[er.length-1].equals("1}")) {
				err=true;
				System.out.println(err);
			}
		} catch (CoolsmsException e) {
			err = true;
			System.out.println(e.getMessage());
			System.out.println(e.getCode());
		}
	}
	public static void main(String[] args) {
		SendM("01085391848", "HI");
	}
}
